<UserControl x:Class="TileDefEditor.Views.TileDefDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TileDefEditor.Views"
             xmlns:vm="clr-namespace:TileDefEditor.ViewModels">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBlock Text="Tile Properties"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,10"/>

		<StackPanel Grid.Row="1"
            DataContext="{Binding TileList.SelectedTile}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            >

			<TextBlock Text="Name"/>
			<TextBox Text="{Binding Name}" HorizontalAlignment="Stretch" MinWidth="200" />

			<TextBlock Text="ID"/>
			<TextBox Text="{Binding Id}" HorizontalAlignment="Stretch" MinWidth="100" />

			<CheckBox Content="Is Solid" IsChecked="{Binding IsSolid}"/>
			<CheckBox Content="Is Wall"  IsChecked="{Binding IsWall}"/>
			<CheckBox Content="Is Floor" IsChecked="{Binding IsFloor}"/>
			<CheckBox Content="Is Roof"  IsChecked="{Binding IsRoof}"/>

			<TextBlock Text="Category"/>
			<ComboBox ItemsSource="{Binding CategoryValues}"
			  SelectedItem="{Binding Category, Mode=TwoWay}"
			  HorizontalAlignment="Stretch" />

			<TextBlock Text="Render Height"/>
			<TextBox Text="{Binding RenderHeight}" HorizontalAlignment="Stretch" />

			<TextBlock Text="Variants"/>
			<StackPanel Orientation="Horizontal">
				<Button Width="24" Click="DecVariants_Click">-</Button>
				<TextBox Width="60" Margin="6,0" Text="{Binding MaxVariants, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center"/>
				<Button Width="24" Click="IncVariants_Click">+</Button>
			</StackPanel>

			<TextBlock Text="Model Path"/>
			<DockPanel LastChildFill="True" Margin="0,2,0,0">
				<Button Content="Browse..." Margin="6,0,0,0" DockPanel.Dock="Right" Click="BrowseModel_Click" />
				<TextBox Text="{Binding ModelPath, Mode=TwoWay}" HorizontalAlignment="Stretch" MinWidth="200" />
			</DockPanel>

			<TextBlock Text="Texture Path"/>
			<DockPanel LastChildFill="True" Margin="0,2,0,0">
				<Button Content="Browse..." Margin="6,0,0,0" DockPanel.Dock="Right" Click="BrowseTexture_Click" />
				<TextBox Text="{Binding TexturePath, Mode=TwoWay}" HorizontalAlignment="Stretch" MinWidth="200" />
			</DockPanel>

			<Button Margin="0 10 0 0" Click="Save_Click" HorizontalAlignment="Left" Width="100">
				Save
			</Button>
		</StackPanel>
	</Grid>
</UserControl>
